{{ 'switch'|trans }}
<ul class="locale_chooser">
    {% for locale in locales %}
        <li
                    {#{% if current_locale == locale.locale %} #}
                class="locale_current"
                    {#{% endif %}#}
                    >
            <a href="{{ locale.link }}" title="{{ locale.locale_current_language }}">{{ locale.locale }}</a>
        </li>
    {% endfor %}
</ul>