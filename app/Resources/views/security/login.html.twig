{% extends 'base.html.twig' %}

{% block title %}{{ 'sign.in'|trans }}{% endblock %}

{% block header %}{{ 'sign.in'|trans }}{% endblock %}

{% block form %}
        <form action="{{ path('login_check') }}" method="post">
            <div class="form_signin
                {% if error %}
                    has-error has-feedback
                {% endif %}
            ">
                <div class="form-group">
                    <label class="control-label" for="username">{{ 'user.name'|trans }}</label>
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
                    {#<span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>#}
                    {#<span id="usernameStatus" class="sr-only">(error)</span>#}
                </div>
                <div class="form-group">
                    <label class="control-label" for="password">{{ 'user.password'|trans }}</label>
                    <input class="form-control" type="password" id="password" name="_password" />
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="form-group">
                    {% if error %}
                        <label class="control-label input-sm">{{ error.messageKey|trans(error.messageData, 'security') }}</label>
                    {% endif %}
                </div>
                {#<div class="form-group">#}
                    {#<div class="g-recaptcha" data-sitekey="{{ recaptcha_public }}"></div>#}
                {#</div>#}
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">{{ 'sign.in'|trans|capitalize }}</button>
                </div>
            </div>
        </form>
{% endblock %}

