{% extends 'base.html.twig' %}

{% block title %}{{ 'sign.in'|trans }} / {{ 'sign.up'|trans }}{% endblock %}

{% block header %}{{ 'sign.in'|trans }} / {{ 'sign.up'|trans }}{% endblock %}

{% block form %}
    <div class="form_left">
        {{ form_start(form_sign_in) }}
        {{ form_errors(form_sign_in) }}
        {{ form_row(form_sign_in.name) }}
        {{ form_row(form_sign_in.password) }}
        <input type="submit" value="{{ 'sign.in'|trans|capitalize }}" />
        {{ form_rest(form_sign_in) }}
        {{ form_end(form_sign_in) }}
    </div>
    <div class="form_right">
        {{ form_start(form_sign_up) }}
        {{ form_errors(form_sign_up) }}
        {{ form_row(form_sign_up.name) }}
        {{ form_row(form_sign_up.email) }}
        {{ form_row(form_sign_up.password) }}
        <input type="submit" value="{{ 'sign.up'|trans|capitalize }}" />
        {{ form_rest(form_sign_up) }}
        {{ form_end(form_sign_up) }}
    </div>
    <div class="clearfix"></div>
{% endblock %}